<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2>Cocktail Menu</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="row scrollable">
        {{#each drinks as |drink|}}
        <div class="col-sm-12 bottom-border">
          <div class="drink" id={{drink.id}}>
            {{drink.name}}
          </div>
          <span class="sexy-line"></span>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-6 drink-content">
      Please select a drink to see a recipe.
    </div>
  </div>
</div>
